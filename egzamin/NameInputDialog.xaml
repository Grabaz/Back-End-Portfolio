<Window x:Class="egzamin.NameInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:egzamin"
        mc:Ignorable="d"
        Title="NameInputDialog" Height="166" Width="315">
    <StackPanel Margin="20">
        <TextBlock Text="Imię:" FontWeight="Bold" />
        <TextBox x:Name="nameTextBox" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="OK" Width="80" Margin="10,0,0,0" Click="OK_Click" />
            <Button Content="Anuluj" Width="80" Click="Cancel_Click" />
        </StackPanel>
    </StackPanel>
</Window>
